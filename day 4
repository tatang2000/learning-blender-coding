using System;
class Player{
    public string nama;
    public int damage;
    public int health;
    public int speed;
    
    public void Aksiplayer(Enemy target){
                while(true){
                Console.WriteLine("turn player!");
                Console.WriteLine("1. Serang");
                Console.WriteLine("2. Heal");
                Console.WriteLine("3. Cek status");
                
                Console.Write("Pilih aksi: (1-3): ");
                int pilihan = int.Parse(Console.ReadLine());
                if(pilihan == 1){
                    Serang(target);
                    break;
                } else if(pilihan == 2){
                    Heal(20);
                    break;
                } else if(pilihan == 3){
                    Cekstatus();
                } else{
                    Console.WriteLine("pilih yang bener!");
                }
                }
    }
    
    public void KenaDamage(int damage){
        health -= damage;
        if(health <= 0){
            health = 0;
            Console.WriteLine(nama+" kena damage "+ damage);
            Console.WriteLine("sisa health: "+health);
            Console.WriteLine(nama+" Dead");
            Console.WriteLine("GAME OVER");
            return;
        }
        Console.WriteLine(nama+" kena damage "+ damage);
        Console.WriteLine("sisa health: "+health+"\n");
    }
    
    public void Heal(int jumlah){
        health += jumlah;
        Console.WriteLine(nama+" heal "+jumlah);
        Console.WriteLine("health sekarang: "+health+"\n");
    }
    
    public void Cekstatus(){
        Console.WriteLine("===STATUS===\n");
        Console.WriteLine("nama: "+nama);
        Console.WriteLine("health: "+health);
        Console.WriteLine("damage: "+damage);
        Console.WriteLine("speed: "+speed);
    }
    
    public bool isAlive(){
        return health > 0;
    }
    
    public void Serang(Enemy target){
        Console.WriteLine("\n"+nama+" menyerang "+target.nama+"!");
        target.KenaDamage(damage);
    }
}

class Enemy{
    public string nama;
    public int damage;
    public int health;
    public int speed;
    
    public void KenaDamage(int damage){
    health -= damage;
    if(health <= 0){
        health = 0;
        Console.WriteLine(nama+" kena damage "+ damage);
        Console.WriteLine("sisa health: "+health);
        Console.WriteLine(nama+" Dead");
        return;
    }
    Console.WriteLine(nama+" kena damage "+ damage);
    Console.WriteLine("sisa health: "+health+"\n");
    }
    
    public void Serang(Player target){
        Console.WriteLine(nama+" menyerang "+target.nama+"!\n");
        target.KenaDamage(damage);
    }
    
    public bool isAlive(){
        return health > 0;
    }
}

class Program{
    static void Main(){
        Player p1 = new Player();
        
        Console.Write("masukkan nama player: ");
        p1.nama = Console.ReadLine();
        p1.damage = 10;
        p1.health = 100;
        p1.speed = 10;
        
        Enemy e1 = new Enemy();
        e1.nama = "GOBLIN";
        e1.damage = 20;
        e1.health = 30;
        e1.speed = 15;
        
        Console.WriteLine("player sudah dibuat!\n");
        Console.WriteLine("muncul musuh: "+e1.nama);
        
        int ronde = 1;
        while(p1.isAlive()&&e1.isAlive()){
            Console.WriteLine("Turn ke-"+ronde+"\n");
            if(p1.speed > e1.speed){
                p1.Aksiplayer(e1);
            } else{
            Console.WriteLine("Turn musuh!");
            e1.Serang(p1);
            if(p1.health > 0){
                p1.Aksiplayer(e1);
            }
            } ronde++;
        } 
    }
}
